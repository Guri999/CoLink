<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_product_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintDimensionRatio="32:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_product_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_corner_12dp"
            android:backgroundTint="@color/forth_color"
            android:fontFamily="@font/inter_bold"
            android:text="@string/home_bottom_project"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/product_edit_title"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_project"
            app:layout_constraintBottom_toTopOf="@id/tv_product_date"
            app:layout_constraintStart_toStartOf="parent"
            android:inputType="text"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_product_project"
            app:layout_constraintBottom_toTopOf="@id/tv_product_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/product_edit_title"/>

        <TextView
            android:id="@+id/tv_product_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_edit_date"
            android:textColor="@color/date_color"
            android:visibility="visible"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/view_product_divide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_date"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/edit_hint_color"/>

        <EditText
            android:id="@+id/et_product_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_divide"
            android:hint="@string/product_edit_des"
            android:fontFamily="@font/inter_thin"
            android:inputType="text"
            android:textSize="15sp"
            android:cursorVisible="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_product_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_divide"
            android:hint="@string/product_edit_des"
            android:fontFamily="@font/inter_thin"
            android:textSize="15sp"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>