<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_product_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintDimensionRatio="32:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_product_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_corner_12dp"
            android:backgroundTint="@color/forth_color"
            android:fontFamily="@font/inter_bold"
            android:text="@string/home_bottom_project"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/product_edit_title"
            android:fontFamily="@font/inter_bold"
            android:background="@drawable/bg_round_corner_4dp"
            android:backgroundTint="@color/color_content"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_project"
            app:layout_constraintBottom_toTopOf="@id/tv_product_team"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:visibility="gone"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay_small_link"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_product_title"
            app:layout_constraintTop_toTopOf="@id/tv_product_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_title"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_web"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_link"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/iv_aos"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aos"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_web"/>

            <ImageView
                android:id="@+id/iv_ios"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_ios"
                android:layout_marginStart="5dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_aos"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_product_project"
            app:layout_constraintBottom_toTopOf="@id/tv_product_team"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lay_small_link"
            android:visibility="visible"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/product_edit_title"/>

        <TextView
            android:id="@+id/tv_product_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="팀 이름을 입력해 주세요."
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lay_product_tag"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/et_product_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="팀 이름을 입력해 주세요."
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_product_title"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lay_product_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_product_team"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_team"
            app:layout_constraintStart_toEndOf="@id/tv_product_team">

            <TextView
                android:id="@+id/tv_product_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_android"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/forth_color"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_product_apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_apple"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/forth_color"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_edit_date"
            android:textColor="@color/date_color"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/tv_product_team"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"/>

        <EditText
            android:id="@+id/et_product_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_product_team"
            android:background="@drawable/bg_round_corner_4dp"
            android:backgroundTint="@color/color_content"
            android:gravity="top"
            android:minHeight="250dp"
            android:hint="@string/product_edit_des"
            android:fontFamily="@font/inter_bold"
            android:inputType="textMultiLine|textNoSuggestions|text"
            android:scrollHorizontally="true"
            android:textSize="15sp"
            android:cursorVisible="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_product_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_date"
            android:hint="@string/product_edit_des"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>