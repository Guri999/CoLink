<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.sign.signup.SignUpActivity">

    <ImageView
        android:id="@+id/iv_sign_up_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_alt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_sign_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="@string/sign_up_input_name"
        android:textSize="28sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_sign_up_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sign_up_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_sign_up_edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sign_up_visible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:src="@drawable/ic_visibility"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toTopOf="@id/et_sign_up_edit1"
        app:layout_constraintEnd_toEndOf="@id/et_sign_up_edit1"
        app:layout_constraintBottom_toBottomOf="@id/et_sign_up_edit1"
        app:tint="@color/enable_stroke" />

    <TextView
        android:id="@+id/tv_sign_up_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sign_up_password_check"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_up_edit1"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_sign_up_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_subtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sign_up_visible2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:src="@drawable/ic_visibility"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toTopOf="@id/et_sign_up_edit2"
        app:layout_constraintEnd_toEndOf="@id/et_sign_up_edit2"
        app:layout_constraintBottom_toBottomOf="@id/et_sign_up_edit2"
        app:tint="@color/enable_stroke" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_sign_up_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_sign_up_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/sign_up_next"
        android:textSize="20sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_round_corner_8dp"
        android:clipToOutline="true"
        android:backgroundTint="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>