<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_mypage_post_item_ing_text"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/mypage_shape"
        android:backgroundTint="@color/forth_color"
        android:gravity="center"
        android:text="참여중"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_post_item_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text=" ㅁㅁ 프로젝트"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mypage_post_item_ing_text"
        app:layout_constraintStart_toEndOf="@+id/tv_mypage_post_item_ing_text"
        app:layout_constraintTop_toTopOf="@+id/tv_mypage_post_item_ing_text" />

    <TextView
        android:id="@+id/tv_mypage_post_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:text="현재"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mypage_post_item_project_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_mypage_post_item_project_name" />

</androidx.constraintlayout.widget.ConstraintLayout>