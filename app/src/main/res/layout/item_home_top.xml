<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_temporary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_top_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/frame_coner_radius_5dp"
        android:clipToOutline="true"
        android:src="@drawable/bg_gradient_left"
        app:layout_constraintBottom_toBottomOf="@id/iv_top"
        app:layout_constraintEnd_toEndOf="@id/iv_top"
        app:layout_constraintStart_toStartOf="@id/iv_top"
        app:layout_constraintTop_toTopOf="@id/iv_top" />

    <TextView
        android:id="@+id/tv_top_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_top_example_team"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_top"
        app:layout_constraintTop_toTopOf="@id/iv_top"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_top_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_top_example_date"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_top_team"
        app:layout_constraintTop_toTopOf="@id/tv_top_team"
        app:layout_constraintStart_toEndOf="@id/tv_top_team"/>

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_top_example_title"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/tv_top_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.65"/>

</androidx.constraintlayout.widget.ConstraintLayout>