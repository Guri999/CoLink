<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.evaluation.EvaluationProjectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_eval_profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_stepper_circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tv_eval_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="프로젝트를 함께 진행한 ㅇㅇㅇ님을 평가해주세요."
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eval_question_num1"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stepper_circle"
                    android:backgroundTint="@color/main_color"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_eval_question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="팀원들과 잘 소통해서 협력했나요?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_eval_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:progressTint="@color/level3"
                android:rating="3"
                android:stepSize="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eval_question_num2"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stepper_circle"
                    android:backgroundTint="@color/main_color"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_eval_question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="주어진 업무를 수행하기 위해 필요한 \n기술적 지식과 전문성을 보유했나요?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_eval_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:progressTint="@color/level3"
                android:rating="3"
                android:stepSize="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eval_question_num3"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stepper_circle"
                    android:backgroundTint="@color/main_color"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_eval_question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="프로젝트에 성실히 참여하고 업무를 수행했나요?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_eval_question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:progressTint="@color/level3"
                android:rating="3"
                android:stepSize="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eval_question_num4"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stepper_circle"
                    android:backgroundTint="@color/main_color"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_eval_question4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="예상치 못한 상황에서 유연하게 대처했나요?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_eval_question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:rating="3"
                android:progressTint="@color/level3"
                android:stepSize="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eval_question_num5"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stepper_circle"
                    android:backgroundTint="@color/main_color"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_eval_question5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="창의적인 해결책을 제시하여 문제를 해결했나요?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_eval_question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:rating="3"
                android:progressTint="@color/level3"
                android:stepSize="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eval_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/inter_regular"
                    android:padding="4dp"
                    android:text="이전"
                    android:textColor="@color/main_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_eval_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/inter_regular"
                    android:padding="4dp"
                    android:text="다음"
                    android:textColor="@color/main_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_eval_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_round_corner_4dp"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/inter_bold"
                android:text="다음"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>