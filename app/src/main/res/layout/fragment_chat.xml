<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.chat.ChatFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_chat_tab"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/tab_chat_color_selector"
        app:tabIconTint="@color/tab_chat_color_selector"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_chat_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_chat_empty"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    <ImageView
        android:id="@+id/iv_chat_empty"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/img_empty_chat"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 채팅이 없습니다."
        android:layout_marginTop="12dp"
        android:textColor="@color/typo_color"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/iv_chat_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>