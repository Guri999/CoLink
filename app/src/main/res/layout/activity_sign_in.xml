<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".ui.sign.signin.SignInActivity">

    <ImageView
        android:id="@+id/iv_sign_in_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_alt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sign_in_logo"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:src="@drawable/logo_co_link"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_sign_in_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="@string/sign_in_id"
        android:textColorHint="@color/hint_color"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_in_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_sign_in_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/sign_in_password"
        android:textColorHint="@color/hint_color"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_in_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sign_in_visible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_visibility"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toTopOf="@id/et_sign_in_password"
        app:layout_constraintEnd_toEndOf="@id/et_sign_in_password"
        app:layout_constraintBottom_toBottomOf="@id/et_sign_in_password"
        app:tint="@color/enable_stroke" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sign_in_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:text="@string/sign_in_login"
        android:textSize="14sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_round_corner_8dp"
        android:clipToOutline="true"
        android:backgroundTint="@color/main_color"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_in_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="s" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sign_in_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/sign_in_register"
        android:textSize="14sp"
        android:textColor="@color/main_color"
        android:background="@drawable/bg_round_corner_8dp_stroke"
        android:clipToOutline="true"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@+id/bt_sign_in_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="s" />


</androidx.constraintlayout.widget.ConstraintLayout>