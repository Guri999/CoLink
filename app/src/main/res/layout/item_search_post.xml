<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchItem_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/forth_color"
                android:fontFamily="@font/inter_bold"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="Project"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_searchItem_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/forth_color"
                android:fontFamily="@font/inter_bold"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="Study"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_searchItem_recruitEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/inter_bold"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="모집완료"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_searchItem_recruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/inter_bold"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="모집중"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_searchItem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:maxLines="1"
            android:text="(취준 포폴용) 개발자 커뮤니티 제작하실 팀원 모집합니다."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_searchItem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/inter_regular"
            android:maxLines="2"
            android:text="포트폴리오용 개발자 커뮤니티를 제작 해보실 팀원을 모집합니다. 포트폴리오용 개발자 커뮤니티를 제작 해보실 팀원을 모집합니다.포트폴리오용 개발자 커뮤니티를 제작 해보실 팀원을 모집합니다."
            android:textColor="@color/typo_color"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchItem_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/inter_regular"
                android:text="# 안드로이드"
                android:textColor="@color/forth_color"
                android:textSize="11sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_searchItem_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/inter_regular"
                android:text="# 모바일 앱"
                android:textColor="@color/forth_color"
                android:textSize="11sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchItem_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="개발자취준생"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="·"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_searchItem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="1시간 전"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageView
                android:id="@+id/iv_searchItem_heart"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_chat" />

            <TextView
                android:id="@+id/tv_searchItem_heartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="0"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_searchItem_view"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/tv_searchItem_viewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="0"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>