<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_product_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintDimensionRatio="28:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_product_promotion_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_corner_12dp"
            android:backgroundTint="@color/forth_color"
            android:fontFamily="@font/inter_bold"
            android:text="@string/home_bottom_project"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_product_promotion_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/btn_product_promotion_link"
            app:layout_constraintTop_toBottomOf="@id/tv_product_promotion_project"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_product_promotion_date"
            android:inputType="text"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_product_promotion_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/btn_product_promotion_link"
            app:layout_constraintTop_toBottomOf="@id/tv_product_promotion_project"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_product_promotion_date"
            android:visibility="visible"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/home_bottom_example_title"/>

        <TextView
            android:id="@+id/tv_product_promotion_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_top_example_date"
            android:textColor="@color/date_color"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_product_promotion_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_product_promotion_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_corner_12dp"
            android:backgroundTint="@color/main_color"
            app:layout_constraintTop_toTopOf="@id/tv_product_promotion_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_promotion_title"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:text="@string/product_link"
                android:paddingHorizontal="14dp"
                android:paddingVertical="7dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_edit_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lay_product_promotion_title"
        android:layout_marginHorizontal="24dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_product_promotion_links"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/product_links"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"/>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rv_product_promotion_link"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="5dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tv_product_promotion_links"-->
<!--            android:orientation="vertical"-->
<!--            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--            tools:listitem="@layout/item_list_post_tag"-->
<!--            android:visibility="gone"/>-->

        <LinearLayout
            android:id="@+id/lay_product_promotion_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_product_promotion_links">

            <include
                android:id="@+id/in_product_promotion_link1"
                layout="@layout/item_product_promotion_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <include
                android:id="@+id/in_product_promotion_link2"
                layout="@layout/item_product_promotion_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible"/>

            <include
                android:id="@+id/in_product_promotion_link3"
                layout="@layout/item_product_promotion_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_product_promotion_edit_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lay_product_promotion_link"
            android:layout_marginTop="10dp"
            android:hint="@string/product_edit_links"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="14sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>